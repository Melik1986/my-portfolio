{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:cache": "eslint . --cache",
    "lint:strict": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "security:audit": "npm audit --omit=dev",
    "security:audit:full": "npm audit",
    "security:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm --validate-https --validate-integrity",
    "security:check": "npm run security:lockfile && npm run security:audit"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@firecms/neat": "^0.4.0",
    "@gsap/react": "^2.1.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "critters": "^0.0.23",
    "echarts": "^5.5.0",
    "gsap": "^3.13.0",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^6.0.3",
    "three": "^0.169.0",
    "use-sync-external-store": "^1.5.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.154.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "default-passive-events": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^2.1.0",
    "lockfile-lint": "^4.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "typescript": "^5"
  }
}
