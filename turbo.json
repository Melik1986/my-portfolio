{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "format": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "type-check": {
      "outputs": [],
      "env": ["NODE_ENV"]
    }
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*"]
}
